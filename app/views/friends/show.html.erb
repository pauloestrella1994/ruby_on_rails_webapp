<div class="card" style="width: 48rem;">
  <div class="card-body">
    <h1 class="card-title"><%= @friend.first_name %></h1>
    <h2 class="card-subtitle mb-2 text-muted"><%= @friend.last_name %></h2>
    <p class="card-text">Email: <%= @friend.email %></p>
    <p class="card-text">Twitter: <%= @friend.twitter %></p>
    <p class="card-text">Phone: <%= @friend.phone %></p>
  </div>
</div>

<%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %>
<%= link_to 'Back', friends_path, class:"btn btn-secondary" %>
